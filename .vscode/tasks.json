{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "run haxe",
			"command": "haxelib",
			"args": [
				"run",
				"haxe"
			],
			"group": "build",
			"dependsOn": "haxe: build.hxml",
			"problemMatcher": []
		},
		{
			"type": "shell",
			"label": "compile haxe",
			"command": "nekotools",
			"args": [
				"boot",
				"-c",
				"run.n",
				"-debug"
			],
			"group": "build",
			"problemMatcher": []
		},
		{
			"type": "hxml",
			"file": "build.hxml",
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"label": "haxe: build.hxml"
		}
	]
}